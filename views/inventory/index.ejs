<%- include('../partials/header') %>
<div class="main-margin">
<h2>Inventory</h2>
<nav class="sub-nav">
    <ul class="no-bullets">
    <li><a href="/inventory/new">Add Item</a></li>
    </ul>
</nav>

<div class="line"></div>
<div class="search-bar">
    <input type="search" placeholder="Search for an item"></input><button class="btn-green">Search</button>
</div>

<% if (userInventory.length) { %>
<table class="inventory-index-table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>SKU</th>
            <th>Quantity Available (kg/L)</th>
        </tr>
    </thead>
    <tbody>
        <% userInventory.forEach((product) => { %>
        <tr>
            <td><a href="/inventory/<%= product.id %>"><%= product.productName %></a></td>
            <td><%= product.sku %></td>
            <td><%= product.quantityAvailable %></td>
        </tr>
        <% }) %>
    </tbody>
</table>

<div class="pagination">
    <% if ( pagination.page > 1) { %>
        <a href="/inventory?page=<%= pagination.page - 1 %><% pagination.search ? `&search=${pagination.search}` : '' %>"><span>Previous</span></a>
        <% } %>
            <span>Page <%= pagination.page %></span>
            <% if (userInventory.length === pagination.limit) { %>
                <a href="/inventory?page=<%= pagination.page + 1 %><% pagination.search ? `&search=${pagination.search}` : '' %>"><span>Next</span></a>
                <% } %>
</div>

<% } else { %>
    <h4>No Items Listed</h4>
    <% } %>
</div>

<%- include('../partials/footer') %>