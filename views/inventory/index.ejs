<%- include('../partials/header') %>

<h2>Inventory</h2>
<nav>
    <ul>
        <li><a href="/inventory/new">Add Item</a></li>
    </ul>
</nav>

<% if (inventory.length) { %>
<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>SKU</th>
            <th>Quantity Available (kg/L)</th>
        </tr>
    </thead>
    <tbody>
        <% inventory.forEach((product) => { %>
        <tr>
            <td><a href="/inventory/<%= product.id %>"><%= product.productName %></a></td>
            <td><%= product.sku %></td>
            <td><%= product.quantityAvailable %></td>
        </tr>
        <% }) %>
    </tbody>
</table>
<% } else { %>
    <h4>No Items Listed</h4>
    <% } %>
</div>

<%- include('../partials/footer') %>