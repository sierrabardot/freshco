<%- include('../partials/header') %>

<h2>Update Item</h2>
    <nav class="sub-nav">
        <ul class="no-bullets">
        <li><a href="/inventory/<%= product.id %>">Back to Item</a></li>
    </ul>
</nav>
<div class="line"></div>

<form action="/inventory/<%= product.id %>?_method=PUT" method="post" class="inventory-form">
    <div class="name-container">
        <label class="name-label" for="productName">Item Name:</label>
        <input type="text" name="productName" value="<%= product.productName %>" required>
    </div>

    <div class="sku-container">
        <label for="sku" class="sku-label">SKU:</label>
        <input type="text" name="sku" value="<%= product.sku %>" placeholder="e.g. RAW-FOOD-NAME">
    </div>

    <div class="qty-container">
        <label for="quantityAvailable" class="qty-label">Quantity Available:</label>
        <input type="number" name="quantityAvailable" placeholder="(kg/L)" value="<%= product.quantityAvailable %>" required>
    </div>

    <button type="submit" class="btn-green">Save Changes</button>
</form>

<form action="/inventory/<%= product.id %>?_method=DELETE" method="post">
    <!-- Referenced: https://stackoverflow.com/questions/9139075/how-to-show-a-confirm-message-before-delete -->
    <button type="submit"  class="btn-dark-green" onclick="return confirm('Are you sure you want to delete this item?');">Delete Item</button>
</form>
<%- include('../partials/footer') %>