<%- include('../partials/header') %>

<h2>Update Item</h2>
<nav>
    <ul>
        <li><a href="/inventory/<%= product.id %>">Back to Item</a></li>
    </ul>
</nav>

<form action="/inventory/<%= product.id %>?_method=PUT" method="post">
    <label for="productName">Product Name:</label>
    <input type="text" name="productName" value="<%= product.productName %>" required>

    <label for="sku">SKU:</label>
    <input type="text" name="sku" value="<%= product.sku %>">

    <label for="quantityAvailable">Quantity Available: (kg/L)</label>
    <input type="number" name="quantityAvailable" value="<%= product.quantityAvailable %>" required>

    <button type="submit">Save Changes</button>
</form>

<form action="/inventory/<%= product.id %>?_method=DELETE" method="post">
    <!-- Referenced: https://stackoverflow.com/questions/9139075/how-to-show-a-confirm-message-before-delete -->
    <button type="submit" onclick="return confirm('Are you sure you want to delete this item?');">Delete Item</button>
</form>
<%- include('../partials/footer') %>